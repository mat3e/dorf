{
    "compileOnSave": false,
    "compilerOptions": {
        "alwaysStrict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "dom"
        ],
        "removeComments": false,
        "declaration": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "stripInternal": true,
        "skipLibCheck": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "../../node_modules/@types/"
        ]
    },
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "genDir": "aot"
    },
    "include": [
        "../../src/**/*",
        "../../index.ts"
    ]
}